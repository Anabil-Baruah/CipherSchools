<!--Edit personal info Modal -->
<div class="modal fade" id="editPersonalInfo" tabindex="-1" aria-labelledby="editPersonalInfoLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content" style="width:30rem;">
      <div class="modal-header">
        <h5 class="modal-title" id="editPersonalInfoLabel">Profile Update</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <div class="container-lg">
          <div class="row">
            <div class="col-lg-4">
              <form id="profileInfoChange">
                <div class="profileImg mt-lg-5 d-flex justify-content-center">
                  <img src="<%= userInfo.profilePic%>" alt="">
                  <label class="uploadImg text-light bg-dark">
                    <i class="fa-solid fa-pencil"></i>
                    <input type="file" id="file-input" name="profilePic" style="display: none;">
                  </label>
                </div>
            </div>
            <div class="col-lg-8">
              <div class="profileInfo">
                <div class="container profileUpdateContainer">

                  <label for="firstName">First name</label>
                  <input type="text" class="form-control" name="firstName" value="<%= userInfo.username%>" required>
                  <label for="lastName">Last name</label>
                  <input type="text" class="form-control" name="lastName" value="<%= userInfo.lastName%>" required>
                  <label for="email">Email address</label>
                  <input type="email" class="form-control" name="email" value="<%= userInfo.email%>" required>
                  <label for="number">Mobile number</label>
                  <input type="text" class="form-control" name="number" value="<%= userInfo.phone%>" required>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary btn-dark text-light cancelPersonalInfo"
          data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary savePersonalInfo"
          style="background-color: #ff8000;">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>

